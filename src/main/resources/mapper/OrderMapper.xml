<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xianyu.dao.OrderMapper">

    <resultMap id="OrderMap" type="com.xianyu.entity.Order">
        <id property="id" column="id"/>
        <result property="itemId" column="item_id"/>
        <result property="buyerId" column="buyer_id"/>
        <result property="sellerId" column="seller_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="finishTime" column="finish_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.xianyu.entity.Order" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (item_id, buyer_id, seller_id, status)
        VALUES (#{itemId}, #{buyerId}, #{sellerId}, #{status})
    </insert>

    <update id="update" parameterType="com.xianyu.entity.Order">
        UPDATE orders
        SET status = #{status},
            finish_time = #{finishTime}
        WHERE id = #{id}
    </update>

    <select id="findById" resultMap="OrderMap">
        SELECT * FROM orders WHERE id = #{id}
    </select>

    <select id="findByBuyer" resultMap="OrderMap">
        SELECT * FROM orders WHERE buyer_id = #{buyerId} ORDER BY create_time DESC
    </select>

    <select id="findBySeller" resultMap="OrderMap">
        SELECT * FROM orders WHERE seller_id = #{sellerId} ORDER BY create_time DESC
    </select>
</mapper>
